<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tourtellini"
        android:layout_above="@id/titleSubtext"
        android:gravity="center"
        android:textSize="60sp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/titleSubtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Never get lost on campus, or in life, again!"
        android:layout_above="@id/exploreButton"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="30dp"
        android:textColor="	#D3D3D3"/>
    <Button
        android:id="@+id/exploreButton"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Explore"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/explore_button"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_above="@id/tourButton"
        />





    <Button
        android:id="@+id/tourButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find a Tour"
        android:layout_marginHorizontal="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/tour_button"
        android:textColor="#FFFF"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/logo"
        android:layout_below="@id/tourButton"
        />



</RelativeLayout>